<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1>修改学生</h1>
        <form action="/doedit/<%= students[0].sid%>" method = "get">
            <p>
                学号<input type="text" name="sid" disabled value="<%= students[0].sid%>">
            </p>
            <p>
                姓名<input type="text" name="name" value="<%= students[0].name%>">
            </p>
            <p>
                年龄<input type="text" name="age" value="<%= students[0].age%>">
            </p>
            <p>
                选修课程
                <%for(var i = 0 ; i < courses.length; i++){%>
                    <input type="checkbox" name="courses" value="<%= courses[i].kid %>" <%if(courses[i].students.indexOf(students[0].sid) != -1){%> checked <%}%>><%= courses[i].name %>
                <%}%>
            </p>
            <p>
                性别<input type="radio" name="sex" value="男" <%if(students[0].sex=='男'){%>checked<%}%>>男
                    <input type="radio" name="sex" value="女" <%if(students[0].sex=='女'){%>checked<%}%>>女
            </p>
            <input type="submit">
        </form>
    </body>
</html>