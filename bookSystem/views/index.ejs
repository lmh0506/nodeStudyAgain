<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <style>
        table tr td{
            width:100px;
            height:10px;
            text-align:center;
            line-height:30px;
            padding:5px;
        }
    </style>
    <body>
    <a href="/addbook">添加图书</a>
        <table border="8" cellspacing="5">
            <tr>
                <td>图书名字</td>
                <td>作者</td>
                <td>价格</td>
                <td colspan="2">操作</td>
            </tr>
            <% for(var i = 0 ;i < book.length;i++){ %>
                <tr>
                    <td><%= book[i].name%></td>
                    <td><%= book[i].author%></td>
                    <td><%= book[i].price%></td>
                    <td><a href="/edit/?id=<%= book[i]._id%>">修改</a></td>
                    <td><a href="/delete/?id=<%= book[i]._id%>">删除</a></td>
                </tr>
            <% } %>
        </table>
    </body>
</html>